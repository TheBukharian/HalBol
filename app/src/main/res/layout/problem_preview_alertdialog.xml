<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/previewImg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/swooshicon" />

    <Button
        android:id="@+id/preview_Tag"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/previewImg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="-15dp"
        android:elevation="0dp"
        android:clickable="false"
        android:text="Government services"
        android:background="@drawable/cam_btn" />

    <TextView
        android:id="@+id/preview_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview_Tag"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text.My text."
        android:textStyle="italic"
        android:textColor="#535353"
        />

    <TextView
        android:id="@+id/preview_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview_Text"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Name" />

    <Button
        android:id="@+id/previewSend_Btn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_below="@+id/preview_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/alert_btn"
        android:backgroundTint="#A5E889"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:paddingEnd="10dp"
        android:text="Send"
        android:textColor="#fff" />

</RelativeLayout>

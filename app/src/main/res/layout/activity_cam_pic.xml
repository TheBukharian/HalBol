<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamPic">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        tools:context=".CamPic">

    <!--ImageView in which image will be set-->

        <ImageView
            android:id="@+id/PhotoCaptured"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginBottom="350dp"
            android:backgroundTint="#2C2727"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/capture_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/cam_btn"
            android:backgroundTint="#64B7EE"
            android:elevation="6dp"
            android:src="@android:drawable/ic_menu_camera" />



    <!--Button to open camera-->
        <Button
            android:id="@+id/mapBtn"
            android:layout_width="190dp"
            android:layout_height="65dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/cam_btn2"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:drawableTint="#80DD59"
            android:paddingLeft="20dp"
            android:elevation="6dp"
            android:text="Show in Map"
            android:visibility="visible" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="640dp">
        <TextView
            android:id="@+id/LongID"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginEnd="30dp"
            />
        <TextView
            android:id="@+id/LatID"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/activity_bottom_sheet"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>